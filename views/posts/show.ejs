<%- layout('layout/boilerPlate') %>

  <form class="needs-validation" method=GET action="/artistans/v2/order/<%= post._id %>" novalidate>
    <div class="row postRow offset-2">
      <div class="mb-3 col-5">
        <img class="image" src="<%= post.imageUrl %>" />
      </div>
      <div class="mb-3 col-5">
        <p>
          <%= post.title %>
        </p>
      </div>
      <div class="mb-3 col-5">
        <p>Posted on <%= post.createdAt.toLocaleString() %>
        </p>
      </div>
      <div class="mb-3 col-5">
        <p><b>
            <%= post.description %>
          </b></p>
      </div>
    </div>
  </form>

  <div class="button-div offset-2">
    <%if(currUser && (post.owner._id.equals(currUser._id) || currUser.role==="admin")){%>
      <div class="mb-2 ms-0 col-12 mt-2">
        <form id="delete-btn" action="/artistans/v2/delete/<%= post._id %>?_method=DELETE" method="POST">
          <button id="order-btn" class="btn btn-primary">Delete</button>
        </form>
      </div>
      <div class="mb-2 col-12">
        <a href="/artistans/v2/edit/<%= post._id %>"><button id="order-btn"
            class="btn edit-btn text-center btn-primary">Edit</button></a>
      </div>

      <%}%>
  </div>