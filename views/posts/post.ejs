<%- layout('layout/boilerPlate') %>

  <div class="form-container">
    <div class="form-card">
      <h1 class="form-title">üì∏ Share a Moment</h1>
      <p class="form-subtitle">Upload and share your beautiful memories</p>

      <form class="needs-validation" method="POST" action="/moments/v1/post" enctype="multipart/form-data" novalidate>
        <!-- Image Upload -->
        <div class="form-group">
          <label for="imgUrl" class="form-label">Choose Image</label>
          <input type="file" name="imgUrl" id="imgUrl" class="form-control" accept="image/*" required>
          <div class="invalid-feedback">
            Please select an image to upload
          </div>
        </div>

        <!-- Title -->
        <div class="form-group">
          <label for="title" class="form-label">Title</label>
          <input type="text" name="title" id="title" class="form-control"
            placeholder="Give your moment a memorable title" required>
          <div class="invalid-feedback">
            Please provide a title
          </div>
        </div>

        <!-- Description -->
        <div class="form-group">
          <label for="description" class="form-label">Description</label>
          <textarea class="form-control" name="description" id="description" rows="4"
            placeholder="Share the story behind this moment..." required></textarea>
          <div class="invalid-feedback">
            Description cannot be empty
          </div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="form-submit-btn">
          ‚ú® Share Moment
        </button>
      </form>

      <!-- Back Link -->
      <div style="text-align: center; margin-top: 1.5rem;">
        <a href="/moments/v1/home" style="color: var(--text-secondary); font-size: 0.9rem;">
          ‚Üê Back to Gallery
        </a>
      </div>
    </div>
  </div>