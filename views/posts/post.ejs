<%- layout('layout/boilerPlate')  %>

<form class="needs-validation" method=POST action="/artistans/v2/post" enctype="multipart/form-data" novalidate>
  <div class="row postRow offset-2">
    <div class="mb-3 col-5">
      <label for="imgUrl" class="form-label">Image Link</label>
      <input type="file" name="imgUrl" class="form-control" placeholder="Please provide Image Url" required>
      <div class="invalid-feedback">
        Please give image url!
      </div>
    </div>
    <div class="mb-3 col-5">
      <label for="title" class="form-label">Title</label>
      <input type="text" name="title" class="form-control" placeholder="Title" required>
      <div class="invalid-feedback">
        Please Give a Title!
      </div>
    </div>
    <div class="mb-3 col-5">
      <label for="discription" class="form-label">Description</label>
      <textarea class="form-control" name="description" rows="3" required></textarea>
      <div class="invalid-feedback">
        Description can not be empty!
      </div>
    </div>
    <div class="submitBtn">
      <button class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>